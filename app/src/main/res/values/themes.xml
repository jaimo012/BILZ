<?xml version="1.0" encoding="utf-8"?>
<!--
    BILZ 앱 테마 설정
    
    AppCompat 테마를 사용하여 CanHub Image Cropper와 호환되도록 설정
-->
<resources>
    
    <!-- 기본 앱 테마 (다크 모드, ActionBar 없음) -->
    <style name="Theme.BILZ" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary 색상 -->
        <item name="colorPrimary">#00BCD4</item>
        <item name="colorPrimaryDark">#00ACC1</item>
        <item name="colorAccent">#00BCD4</item>
        
        <!-- 배경 색상 -->
        <item name="android:windowBackground">#0D0D0D</item>
        <item name="android:colorBackground">#0D0D0D</item>
        
        <!-- 상태바/네비게이션 바 색상 -->
        <item name="android:statusBarColor">#0D0D0D</item>
        <item name="android:navigationBarColor">#0D0D0D</item>
        
        <!-- 상태바 아이콘 밝은 색상 (다크 배경용) -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <!-- Image Cropper 전용 테마 (ActionBar 포함, 다크 모드) -->
    <style name="Theme.BILZ.Crop" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary 색상 (툴바 색상) -->
        <item name="colorPrimary">#1A1A1A</item>
        <item name="colorPrimaryDark">#0D0D0D</item>
        <item name="colorAccent">#00BCD4</item>
        
        <!-- 배경 색상 -->
        <item name="android:windowBackground">#0D0D0D</item>
        <item name="android:colorBackground">#0D0D0D</item>
        
        <!-- 상태바/네비게이션 바 색상 -->
        <item name="android:statusBarColor">#0D0D0D</item>
        <item name="android:navigationBarColor">#0D0D0D</item>
        
        <!-- 상태바 아이콘 밝은 색상 -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- 툴바 텍스트/아이콘 색상 -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#E0E0E0</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
    </style>
    
</resources>
